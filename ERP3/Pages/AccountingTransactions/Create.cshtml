@page
@model ERP3.Pages.AccountingTransactions.CreateModel
@{
    ViewData["Title"] = "Thêm giao dịch mới";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Transaction.Description" class="form-label"></label>
        <input asp-for="Transaction.Description" class="form-control" />
        <span asp-validation-for="Transaction.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Transaction.Amount" class="form-label"></label>
        <input asp-for="Transaction.Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Transaction.Date" class="form-label"></label>
        <input asp-for="Transaction.Date" class="form-control" type="date" />
        <span asp-validation-for="Transaction.Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Transaction.Type" class="form-label"></label>
        <select asp-for="Transaction.Type" class="form-control">
            <option value="">-- Chọn loại --</option>
            <option value="Thu">Thu</option>
            <option value="Chi">Chi</option>
        </select>
        <span asp-validation-for="Transaction.Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Transaction.WarehouseId" class="form-label"></label>
        <select asp-for="Transaction.WarehouseId" class="form-control" asp-items="Model.Warehouses">
            <option value="">-- Chọn kho --</option>
        </select>
        <span asp-validation-for="Transaction.WarehouseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Transaction.LocationId" class="form-label"></label>
        <select asp-for="Transaction.LocationId" class="form-control" asp-items="Model.Locations">
            <option value="">-- Chọn vị trí --</option>
        </select>
        <span asp-validation-for="Transaction.LocationId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
