@page "{id:int}"
@model ERP3.Pages.AccountingTransactions.DeleteModel
@{
    ViewData["Title"] = "Xóa giao dịch";
}

<h2>Xóa giao dịch</h2>

<div class="alert alert-warning">
    Bạn có chắc muốn xóa giao dịch sau không?
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Transaction.Description</dd>

        <dt class="col-sm-2">Số tiền</dt>
        <dd class="col-sm-10">@Model.Transaction.Amount.ToString("N0")</dd>

        <dt class="col-sm-2">Ngày giao dịch</dt>
        <dd class="col-sm-10">@Model.Transaction.Date.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Loại</dt>
        <dd class="col-sm-10">@Model.Transaction.Type</dd>

        <dt class="col-sm-2">Tên kho</dt>
        <dd class="col-sm-10">@Model.Transaction.WarehouseName</dd>

        <dt class="col-sm-2">Địa chỉ kho</dt>
        <dd class="col-sm-10">@Model.Transaction.WarehouseAddress</dd>

        <dt class="col-sm-2">Vị trí</dt>
        <dd class="col-sm-10">@Model.Transaction.LocationName</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Transaction.Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a class="btn btn-secondary" href="./Index">Hủy</a>
</form>
