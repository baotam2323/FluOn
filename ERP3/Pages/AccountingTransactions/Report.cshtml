@page
@model ERP3.Pages.AccountingTransactions.ReportModel
@{
    ViewData["Title"] = "Báo cáo giao dịch";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label for="FromDate" class="form-label">Từ ngày</label>
        <input asp-for="FromDate" type="date" class="form-control" />
    </div>
    <div class="col-md-3">
        <label for="ToDate" class="form-label">Đến ngày</label>
        <input asp-for="ToDate" type="date" class="form-control" />
    </div>
    <div class="col-md-3">
        <label for="WarehouseId" class="form-label">Kho</label>
        <select asp-for="WarehouseId" asp-items="@(new SelectList(Model.Warehouses, "Id", "Name"))" class="form-select">
            <option value="">-- Tất cả --</option>
        </select>
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Lọc</button>
    </div>
</form>

@if (Model.Transactions.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Mô tả</th>
                <th>Ngày</th>
                <th>Số tiền</th>
                <th>Loại</th>
                <th>Kho</th>
                <th>Nhân viên</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model.Transactions)
            {
                <tr>
                    <td>@t.Description</td>
                    <td>@t.Date.ToString("dd/MM/yyyy")</td>
                    <td>@t.Amount.ToString("N0")</td>
                    <td>@t.Type</td>
                    <td>@t.WarehouseId</td>
                    <td>@t.Employee?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Không có dữ liệu phù hợp với điều kiện lọc.
    </div>
}
