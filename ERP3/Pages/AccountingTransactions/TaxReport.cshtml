@page
@model ERP3.Pages.AccountingTransactions.TaxReportModel
@{
    ViewData["Title"] = "Báo cáo thuế";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered mt-4">
    <thead class="table-dark">
        <tr>
            <th>Kho</th>
            <th>Tổng thu</th>
            <th>Tổng chi</th>
            <th>Thu nhập tính thuế</th>
            <th>Số thuế phải nộp (10%)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TaxReports)
        {
            <tr>
                <td>@item.WarehouseName</td>
                <td>@item.TotalIncome.ToString("C")</td>
                <td>@item.TotalExpense.ToString("C")</td>
                <td>@item.TaxableIncome.ToString("C")</td>
                <td>@item.TaxAmount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
