@page "{id:int}"
@model ERP3.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Xóa nhân viên";
}

<h1>Xóa nhân viên</h1>

<div>
    <h4>Bạn có chắc chắn muốn xóa nhân viên này?</h4>
    <p><b>@Model.Employee.Name</b> - @Model.Employee.Email</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>
