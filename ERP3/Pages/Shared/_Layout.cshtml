@using ERP3.Services
@inject IWarehouseService WarehouseService

@{
    ViewData["Title"] = ViewData["Title"] ?? "ERP3";
    var warehouses = await WarehouseService.GetAllAsync();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP3</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        #sidebar-wrapper {
            width: 250px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-left: -250px;
        }

        #page-content-wrapper {
            width: 100%;
        }

        .list-group-item-action:hover {
            background-color: #e9f5ff;
        }

        .sidebar-heading {
            font-size: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <aside class="border-end bg-light" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 fw-bold text-primary">ERP3 Dashboard</div>
            <div class="list-group list-group-flush">
                <a asp-page="/Index" class="list-group-item list-group-item-action bg-light">Trang chủ</a>
                <a asp-page="/Warehouse/Index" class="list-group-item list-group-item-action bg-light">Quản lý Kho</a>
                <a asp-page="/Employees/Index" class="list-group-item list-group-item-action bg-light">Nhân viên</a>
                <a asp-page="/AccountingTransactions/Index" class="list-group-item list-group-item-action bg-light">Giao dịch</a>
                <a asp-page="/Reports/WarehouseReport" class="list-group-item list-group-item-action bg-light">Báo cáo Kho</a>
                <a asp-page="/Reports/FinanceReport" class="list-group-item list-group-item-action bg-light">Báo cáo Tài chính</a>
            </div>

            <div class="mt-4 px-3">
                <h6>Kho hiện có:</h6>
                <ul class="list-group">
                    @foreach (var w in warehouses)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @w.Name
                            <span class="badge bg-primary rounded-pill">@w.Capacity</span>
                        </li>
                    }
                </ul>
            </div>
        </aside>

        <!-- Page content -->
        <div id="page-content-wrapper" class="flex-grow-1 d-flex flex-column">
            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">☰</button>
                    <span class="navbar-brand ms-3">@ViewData["Title"]</span>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                            <li class="nav-item me-3"><span class="nav-link">Xin chào, Admin</span></li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main class="container-fluid p-4 flex-grow-1">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="border-top text-center py-3 bg-light mt-auto">
                &copy; @DateTime.Now.Year ERP3 - Hệ thống quản lý doanh nghiệp
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebarToggle = document.getElementById('sidebarToggle');
        const wrapper = document.getElementById('wrapper');
        sidebarToggle.addEventListener('click', () => wrapper.classList.toggle('toggled'));
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

